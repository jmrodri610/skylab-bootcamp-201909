extends ../view/index

block body
    section.view.login
        form(method='post' action=path)
            h1.login__title Login
            input.login__field(type='email' name='email' placeholder='e-mail')
            input.login__field(type='password' name='password' placeholder='password')
            button.login__submit 🗝
            a.register__back(href='/') Go back